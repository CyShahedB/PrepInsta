import java.util.*;
public class Main
{
	public static void main(String args[])
	{
	    Scanner sc=new Scanner(System.in);
	    int dec=sc.nextInt();
	    String s="";
	    int r;
	    while(dec!=0)
	    {
	        r=dec%8;
	        s=Integer.toString(r)+s;
	        dec=dec/8;
	    }
	    System.out.println(s);
	}
}

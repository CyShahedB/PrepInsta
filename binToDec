Using Loop
import java.util.*;
public class Main
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        int bin=sc.nextInt(), p=0,dec=0;
        while(bin>0)
        {
            int r=bin%10;
            dec=dec+r*(int)Math.pow(2,p);
            bin=bin/10;
            p++;
        }
        System.out.println(dec);
    }
}

